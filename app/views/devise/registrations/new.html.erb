<h2><%= t 'user.register' %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "well"}) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :first_name %> <%= f.text_field :first_name %>
  <%= f.label :last_name %> <%= f.text_field :last_name %>

  <%= f.label :phone_number %>
  <%= f.phone_field :phone_number %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <div class="controls"><%= f.submit t('register') %></div>

  <% if false %>
    <%= f.inputs do %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone_number, :as => :phone %>
        <%= f.input :email, :as => :email %>
        <%= f.input :password, :as => :password %>
        <%= f.input :password_confirmation, :as => :password %>
    <% end %>


    <% f.actions do %>
        <%= f.action :submit %>
    <% end %>
  <% end %>

<% end %>

<%= render :partial => "devise/shared/links" %>
