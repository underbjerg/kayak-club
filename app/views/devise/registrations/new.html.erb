<h2><%= t 'register' %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "well"}) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :first_name, t('first_name') %> <%= f.text_field :first_name %>
  <%= f.label :last_name, t('last_name') %> <%= f.text_field :last_name %>

  <%= f.label :phone_number, t('phone_number') %>
  <%= f.phone_field :phone_number %>

  <%= f.label :email, t('email') %>
  <%= f.email_field :email %>

  <%= f.label :password, t('password') %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, t('password_confirmation') %>
  <%= f.password_field :password_confirmation %>

  <div class="controls"><%= f.submit t('register'), :class => "btn " %></div>

<% end %>

<%= render :partial => "devise/shared/links" %>
